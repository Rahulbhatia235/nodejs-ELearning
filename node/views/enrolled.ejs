<div class="container">
    <center> <div class="well">

</div>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>COURSEID  </th>
      <th>USERID  </th>
      <th>DATE </th>
      <th>STATUS </th>
    </tr>

      <% for(var i=0;i<message.length;i++){%>
        <tr>
        <td><%=message[i].cid %></td>
        <td><%=message[i].UserId %></td>
         <td><%=message[i].date %></td>

        <td><button type="button" onclick=func(<%=message[i].cid %>) class="btn btn-success">Remove</button></td>
        </tr>
      <%}%>
</thead>
      </center></div>
<script type="text/javascript">
function func(k){
  const p={k};
  fetch('/remove', {method: 'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify(p)})
.then(function(response) {
if(response.ok) {
  console.log('Click was recorded');
  fetch('/enrolled',{method:'GET', headers:{'Content-Type':'application/json'}}).then(function(response){
    if(response.ok){
      console.log("Edited")
    }
  })
  return;
}

throw new Error('Request failed.');

})
.catch(function(error) {
console.log(error);

});
}

</script>

